/*==============================
	Colors
==============================*/
$white = #fff
$black = #000

$bg = #141a2a
$lightbg = #1d263b
$grey = #dedede
$purple = #aa72ce
$yellow = #e8d189
$nephrite = #227f9e
$red = #e23353
$green = #29b474
$blue = #2568b0

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,400;0,600;0,700;1,400&display=swap')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Mulish', sans-serif
	font-weight 400
	background-color $bg
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow
	cursor pointer
	&:focus
		outline none
a
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	transition .5s ease
	transition-property background-color, border-color
	&:focus
		outline none

select::-ms-expand
	display none

input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
	-webkit-appearance none
	margin 0

input[type=number]
	-moz-appearance textfield

ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $purple
	color $bg
	text-shadow none
::selection
	background $purple
	color $bg
	text-shadow none

::-webkit-input-placeholder
	color $grey
	opacity 1
::-moz-placeholder
	color $grey
	opacity 1
:-moz-placeholder
	color $grey
	opacity 1
:-ms-input-placeholder
	color $grey
	opacity 1

:focus
	outline -webkit-focus-ring-color auto 0px

:focus-visible
	outline 0px dotted

.tab-content
	width 100%

.tab-content > .tab-pane
	display none

.tab-content > .active
	display block

.fade
	transition opacity .4s linear

@media screen and (prefers-reduced-motion: reduce)
	.fade
		transition none

.fade:not(.show)
	opacity 0

.collapse:not(.show)
	display none

.collapsing
	position relative
	height 0
	overflow hidden
	transition height .5s ease

@media screen and (prefers-reduced-motion: reduce)
	.collapsing
		transition none

.row--grid
	margin-right -10px
	margin-left -10px
	.col-6
	.col-12
		padding-left 10px
		padding-right 10px
	@media (min-width: 768px)
		margin-right -15px
		margin-left -15px
		.col-6
		.col-12
			padding-left 15px
			padding-right 15px

/*==============================
	Header
==============================*/
.header
	position fixed
	width 100%
	top 0
	left 0
	z-index 99
	background-color transparent
	transition background-color .5s ease
	background-color $bg
	border-bottom 1px solid rgba($purple, .12)
	&--active
		.header__logo
			pointer-events auto
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		position relative
		height 80px
		width 100%
	&__logo
		z-index 1
		width auto
		height 50px
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		position relative
		margin-left 40px
		pointer-events none
		img
			height 50px
			width auto
	&__btn
		position absolute
		width 24px
		height 22px
		display block
		left 0
		span
			position absolute
			left 0
			width 24px
			height 2px
			background-color $white
			border-radius 3px
			transition .5s ease
			opacity 1
			&:first-child
				top 0
			&:nth-child(2)
				top 10px
				width 16px
			&:last-child
				top 20px
				width 8px
		&--active
			span
				&:first-child
					transform rotate(45deg)
					top 10px
				&:nth-child(2)
					opacity 0
				&:last-child
					width 24px
					transform rotate(-45deg)
					top 10px
	&__tagline
		display none
	&__nav
		position fixed
		width 250px
		top 80px
		bottom 0
		left 0
		background-color $bg
		padding 30px 15px 0
		transition transform .5s ease
		transform translate3d(-250px, 0, 0)
		border-top 1px solid rgba($purple, .1)
		&--active
			transform translate3d(0, 0, 0)
		li
			display block
			margin-bottom 25px
			&:last-child
				margin-bottom 0
		a
			display inline-block
			font-size 14px
			line-height 24px
			font-weight 600
			color $white
			text-transform uppercase
			svg
				fill $white
				width 14px
				height auto
				transition .5s ease
				margin-left 1px
				margin-top 2px
			&:hover
			&[aria-expanded="true"]
				color $purple
				svg
					fill $purple
	&__dropdown
		position relative
		display block
		width auto
		.dropdown-toggle
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			svg
				width 14px
				height auto
				fill $white
				margin-left 3px
				margin-top 2px
				transition fill .5s ease
			&:hover
			&[aria-expanded="true"]
				color $purple
				svg
					fill $purple
			&--menu
				svg
					width 18px
					margin-left 0
					margin-top 0
	&__dropdown-menu
		position absolute
		background-color $lightbg
		padding 20px
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		width 180px
		text-align left
		z-index -1
		pointer-events none
		opacity 0
		border-radius 20px
		transition .5s ease
		transition-property opacity, margin-top, transform
		margin-top 0
		top 0
		transform translate3d(0px, 24px, 0px)
		border 1px solid $bg
		.header__dropdown-menu
			margin-top -10px
			margin-left calc(100% - 28px)
			&.show
				margin-top 5px
		li
			position relative
			padding 0
			margin-bottom 12px
			&:last-child
				margin-bottom 0
		a
			font-size 14px
			line-height 24px
			color $white
			text-transform none
			font-weight 400
			padding 0 0 0 17px
			&:before
				content ''
				position absolute
				width 4px
				height 4px
				border-radius 50%
				background-color $purple
				left 0
				top 50%
				margin-top -2px
				transition box-shadow .5s ease
			&:hover
				color $purple
				&:before
					box-shadow 0 0 8px rgba($purple, .77)
		&.show
			z-index 1000
			pointer-events auto
			opacity 1
			margin-top 10px
	&__cta
		display flex
		flex-direction row
		justify-content center
		align-items center
		position relative
		width 50px
		height 50px
		background-color transparent
		border-radius 18px
		overflow hidden
		border 2px solid rgba($purple, .12)
		span
			display none
		svg
			width 21px
			height auto
			fill $white
		&:hover
			border-color $purple
			box-shadow 0 0 22px rgba($purple, .12)
	@media (min-width: 576px)
		&__logo
			margin-left 45px
		&__tagline
			display block
			line-height 24px
			color $white
			font-size 14px
			transition color .5s ease
			margin-right auto
			margin-left 20px
			font-weight 400
		&__nav
			padding-left calc((100vw - 510px)/2)
	@media (min-width: 768px)
		&__cta
			padding 0 20px
			width auto
			span
