			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			background-color transparent
			top auto
			bottom auto
			left auto
			right auto
			width auto
			transform translate3d(0, 0, 0)
			padding 0
			margin-right auto
			border-top none
			z-index 2
			li
				display block
				margin-right 44px
				margin-bottom 0
				&:last-child
					margin-right 0
			a
				display flex
				flex-direction row
				justify-content center
				align-items center
				height 40px
				color $white
				font-weight 400
				text-transform none
				&:hover
					color $purple
		&__dropdown-menu
			transform translate3d(0px, 40px, 0px)
			margin-top -10px
			.header__dropdown-menu
				margin-top 14px
				transform translate3d(0, 0, 0)
				&.show
					margin-top 29px
			li
				margin-right 0
				margin-bottom 12px
				padding 0
				&:last-child
					margin-bottom 0
			a
				padding 0 0 0 17px
				height auto
				color $white
				justify-content flex-start
				&:hover
					color $purple
			&.show
				margin-top 0
		&__cta
			z-index 1

